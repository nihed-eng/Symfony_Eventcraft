{% extends 'baseoffre.html.twig' %}

{% block title %}Offre - {{ offre.titreOffre }}{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/4.5.6/css/ionicons.min.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: #f8f9fa;
        }

        .hero-wrap {
            background-size: cover;
            background-position: center center;
            height: 400px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
        }

      .hero-wrap .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 58%;
    background: rgba(0, 0, 0, 0.5);
}

        .hero-wrap h1 {
            font-size: 3rem;
            font-weight: 700;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background: white;
            padding: 30px;
            margin-top: 15px;
        }

        .table th {
            width: 30%;
            font-weight: bold;
        }

        .btn-custom, .btn-delete {
           padding: 5px 10px;
    /* border-radius: 5px; */
    text-decoration: none;
    color: white;
    display: inline-flex
;
    align-items: center;
    border: none;
    margin: 4px;
    justify-content: center;
    background-color: rgb(161, 104, 163);
        }

           .btn-custom {
    padding: 5px 10px;
    /* border-radius: 0px; */
    text-decoration: none;
    color: white;
    display: inline-flex
;
    align-items: center;
    border: none;
    margin: 4px;
    justify-content: center;
    background-color: rgb(161, 104, 163);
}
.btn-secondary{
    padding: 5px 10px;
    border-radius: 0px; 
    text-decoration: none;
    color: white;
    display: inline-flex
;
    align-items: center;
    border: none;
    margin: 4px;
    justify-content: center;
    background-color: #98A695;
}

        .btn-custom:hover {
            background-color: #F0C8C6;
        }

        .btn-delete {
 background-color: rgb(161, 104, 163);        }

        .btn-delete:hover {
            background-color: #F0C8C6;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="hero-wrap" style="background-image: url('/images/af.jpeg');">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-end justify-content-center">
                <div class="col-md-12 ftco-animate text-center mb-5">
                   
                    <h1 class="mb-3 bread">Offre - {{ offre.titreOffre }}</h1>
                </div>
            </div>
        </div>
    </div>

    <section class="ftco-section bg-light">
        <div class="container">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Titre</th>
                                <td>{{ offre.titreOffre }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ offre.descriptionOffre }}</td>
                            </tr>
                            <tr>
                                <th>Type</th>
                                <td>{{ offre.typeOffre }}</td>
                            </tr>
                            <tr>
                                <th>Montant</th>
                                <td>{{ offre.montant }} ‚Ç¨</td>
                            </tr>
                            <tr>
                                <th>Date d'expiration</th>
                                <td>{{ offre.dateExp ? offre.dateExp|date('d/m/Y') : 'Non sp√©cifi√©e' }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_offre_index') }}" class="btn btn-secondary">Retour</a>
                        <div>
                            <a href="{{ path('app_offre_edit', {'id': offre.id}) }}" class="btn-custom">‚úè Modifier</a>
                            <form method="post" action="{{ path('app_offre_delete', {'id': offre.id}) }}" style="display:inline;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette offre ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offre.id) }}">
                                <button type="submit" class="btn-delete">üóë Supprimer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
