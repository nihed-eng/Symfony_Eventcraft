{% extends 'admin/layout.html.twig' %}

{% block title %}Tableau de bord - Admin EventCraft{% endblock %}

{% block content %}
<div class="admin-header">
    <h1 class="admin-title">Tableau de bord</h1>
</div>

<div class="row">
    <div class="col-md-6 col-xl-3 mb-4">
        <div class="stats-card bg-primary text-white">
            <div class="stats-card-body">
                <div class="stats-card-value">{{ users|length }}</div>
                <div class="stats-card-title">Total Utilisateurs</div>
            </div>
            <div class="stats-card-icon">
                <i class="fas fa-users"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3 mb-4">
        <div class="stats-card bg-success text-white">
            <div class="stats-card-body">
                <div class="stats-card-value">{{ users|length }}</div>
                <div class="stats-card-title">Utilisateurs inscrits</div>
            </div>
            <div class="stats-card-icon">
                <i class="fas fa-user-check"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3 mb-4">
        <div class="stats-card bg-warning text-white">
            <div class="stats-card-body">
                <div class="stats-card-value">
                    {% if reclamations is defined %}
                        {{ reclamations|filter(r => r.status == 'pending')|length }}
                    {% else %}
                        0
                    {% endif %}
                </div>
                <div class="stats-card-title">Réclamations en attente</div>
                <div class="stats-card-subtitle">Nécessitant une réponse</div>
            </div>
            <div class="stats-card-icon">
                <i class="fas fa-exclamation-circle"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3 mb-4">
        <div class="stats-card bg-info text-white">
            <div class="stats-card-body">
                <div class="stats-card-value">
                    {% if reclamations is defined %}
                        {{ reclamations|filter(r => r.status == 'resolved')|length }}
                    {% else %}
                        0
                    {% endif %}
                </div>
                <div class="stats-card-title">Réclamations résolues</div>
                <div class="stats-card-subtitle">Traitées avec succès</div>
            </div>
            <div class="stats-card-icon">
                <i class="fas fa-check-circle"></i>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="data-card">
            <div class="data-card-header">
                <h2 class="data-card-title">Utilisateurs récents</h2>
                <a href="{{ path('app_admin_users') }}" class="btn btn-outline-primary btn-sm">
                    Voir tout
                </a>
            </div>
            <div class="data-card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Email</th>
                                <th>Rôle</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users|slice(0, 5) %}
                                <tr>
                                    <td>{{ user.firstName }} {{ user.lastName }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>
                                        {% if 'ROLE_ADMIN' in user.roles %}
                                            <span class="badge bg-primary">Admin</span>
                                        {% else %}
                                            <span class="badge bg-secondary">User</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if app.user != user %}
                                            <form method="post" action="{{ path('app_admin_user_delete', {'id': user.id}) }}" style="display: inline-block"
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete-user-' ~ user.id) }}">
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-6 mb-4">
        <div class="data-card">
            <div class="data-card-header">
                <h2 class="data-card-title">Réclamations récentes</h2>
                <a href="{{ path('app_admin_reclamations') }}" class="btn btn-outline-primary btn-sm">
                    Voir tout
                </a>
            </div>
            <div class="data-card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Utilisateur</th>
                                <th>Sujet</th>
                                <th>Date</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if reclamations is defined and reclamations|length > 0 %}
                                {% for reclamation in reclamations|slice(0, 5) %}
                                    <tr>
                                        <td>{{ reclamation.user.firstName }} {{ reclamation.user.lastName }}</td>
                                        <td>{{ reclamation.subject }}</td>
                                        <td>{{ reclamation.createdAt|date('d/m/Y H:i') }}</td>
                                        <td>
                                            {% if reclamation.status == 'pending' %}
                                                <span class="badge bg-warning">En attente</span>
                                            {% else %}
                                                <span class="badge bg-success">Résolu</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if reclamation.status == 'pending' %}
                                                <button type="button" class="btn btn-primary btn-respond" data-bs-toggle="modal" data-bs-target="#respondModal{{ reclamation.id }}">
                                                    <i class="fas fa-reply"></i> Répondre
                                                </button>

                                                <!-- Modal for responding to reclamation -->
                                                <div class="modal fade" id="respondModal{{ reclamation.id }}" tabindex="-1" aria-labelledby="respondModalLabel{{ reclamation.id }}" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="respondModalLabel{{ reclamation.id }}">Répondre à la réclamation</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <form method="post" action="{{ path('app_admin_reclamation_respond', {'id': reclamation.id}) }}">
                                                                <div class="modal-body">
                                                                    <div>
                                                                        <h6 class="fw-bold">Réclamation:</h6>
                                                                        <p>{{ reclamation.description }}</p>
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label for="responseContent{{ reclamation.id }}" class="form-label">Votre réponse</label>
                                                                        <textarea class="form-control" id="responseContent{{ reclamation.id }}" name="response" rows="5" required></textarea>
                                                                    </div>
                                                                    <input type="hidden" name="_token" value="{{ csrf_token('respond-reclamation-' ~ reclamation.id) }}">
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                                    <button type="submit" class="btn btn-primary">Envoyer la réponse</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% else %}
                                                <button type="button" class="btn btn-success btn-respond" data-bs-toggle="modal" data-bs-target="#viewResponseModal{{ reclamation.id }}">
                                                    <i class="fas fa-eye"></i> Voir la réponse
                                                </button>

                                                <!-- Modal for viewing response -->
                                                <div class="modal fade" id="viewResponseModal{{ reclamation.id }}" tabindex="-1" aria-labelledby="viewResponseModalLabel{{ reclamation.id }}" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="viewResponseModalLabel{{ reclamation.id }}">Réponse à la réclamation</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <h6 class="fw-bold">Réclamation:</h6>
                                                                <p>{{ reclamation.description }}</p>
                                                                <hr>
                                                                <h6 class="fw-bold">Réponse:</h6>
                                                                <p>{{ reclamation.response ? reclamation.response.content : 'Aucune réponse' }}</p>
                                                                {% if reclamation.response %}
                                                                    <small class="text-muted">Répondu le {{ reclamation.response.createdAt|date('d/m/Y H:i') }}</small>
                                                                {% endif %}
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center py-4">
                                        <p class="text-muted mb-0">Aucune réclamation pour le moment.</p>
                                    </td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize any dashboard-specific JavaScript here
        });
    </script>
{% endblock %}
