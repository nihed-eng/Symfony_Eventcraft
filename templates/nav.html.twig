<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Navbar - EventCraft</title>
        <link rel="icon" href="favicon.ico">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid navbar-container">
                <!-- Menu de gauche -->
                <div class="left-menu">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainMenu">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    
                    <div class="collapse navbar-collapse" id="mainMenu">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_events') }}">EVENEMENTS</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_offre_index') }}">OFFRE</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_salle_index') }}">SALLE</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('decoration_welcom') }}">DÉCORATIONS</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_reclamation_new') }}">SUBMIT COMPLAINT</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Logo à droite -->
                <a class="navbar-brand" href="{{ path('app_home') }}">
                    <img src="/images/logoblanc.png" alt="EventCraft" class="logo-img">
                </a>

                <!-- Menu utilisateur à droite -->
                <div class="right-menu">
                    <ul class="navbar-nav">
                        {% if app.user %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" data-bs-toggle="dropdown">
                                    <i class="fas fa-user me-1"></i>{{ app.user.firstName|default(app.user.email|split('@')[0])|upper }}
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="{{ path('decoration_index') }}">Profile</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_settings') }}">Settings</a></li>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li><a class="dropdown-item" href="{{ path('app_admin_dashboard') }}">Admin Dashboard</a></li>
                                    {% endif %}
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" href="{{ path('app_logout') }}">Logout</a></li>
                                </ul>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_register') }}">Register</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
{% block body %}        {% endblock %}

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
