{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link href='https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css' rel='stylesheet' />
    <style>
        :root {
            --primary: #8D598F;
            --secondary: #CBA979;
            --accent: #F0C8C6;
            --dark: #2D2D2D;
            --light: #F8F9FA;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--light);
            color: var(--dark);
            overflow-x: hidden;
        }

        /* Hero Section - Parallax Effect */
        .hero-parallax {
            height: 70vh;
            min-height: 500px;
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            overflow: hidden;
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(141, 89, 143, 0.8) 0%, rgba(0, 0, 0, 0.7) 100%);
        }

        .hero-content {
            position: relative;
            z-index: 2;
            text-align: center;
            padding: 0 20px;
        }

        .hero-title {
            font-family: 'Playfair Display', serif;
            font-size: 4rem;
            font-weight: 700;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            animation: fadeInDown 1s both;
        }

        .breadcrumb-custom {
            background: transparent;
            justify-content: center;
            animation: fadeIn 1s both 0.3s;
        }

        .breadcrumb-custom a {
            color: var(--accent);
            text-decoration: none;
            transition: all 0.3s;
        }

        .breadcrumb-custom a:hover {
            color: white;
            transform: translateY(-2px);
        }

        /* Main Content */
        .salle-container {
            margin-top: -100px;
            position: relative;
            z-index: 10;
        }

        .salle-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.5s, box-shadow 0.5s;
        }

        .salle-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 40px 80px rgba(0, 0, 0, 0.15);
        }

        .salle-header {
            position: relative;
            height: 250px;
            overflow: hidden;
        }

        .salle-badge {
            position: absolute;
            top: 20px;
            right: 20px;
            background: var(--secondary);
            color: white;
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: 600;
            box-shadow: 0 4px 15px rgba(203, 169, 121, 0.3);
            animation: pulse 2s infinite;
        }

        .salle-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            color: var(--primary);
            margin-bottom: 1rem;
            position: relative;
            display: inline-block;
        }

        .salle-title:after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 60px;
            height: 3px;
            background: var(--secondary);
        }

        /* Info Sections */
        .info-section {
            padding: 40px;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            margin-top: 30px;
        }

        .info-box {
            background: white;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            transition: all 0.3s;
            border-left: 1px solid var(--primary);
        }

        .info-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            border-left: 4px solid var(--secondary);
        }

        .info-box h3 {
            color: var(--primary);
            font-weight: 600;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }

        .info-box h3 i {
            margin-right: 10px;
            color: var(--secondary);
        }

        /* Calendar Section */
        .calendar-section {
            background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
            border-radius: 10px;
            padding: 30px;
            margin-top: 40px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        }

        /* FullCalendar Customization */
        .fc {
            font-family: 'Poppins', sans-serif;
        }

        .fc-header-toolbar {
            margin-bottom: 1.5em;
        }

        .fc-toolbar-title {
            font-family: 'Playfair Display', serif;
            color: var(--primary);
            font-weight: 700;
        }

        .fc-button {
            background-color: white;
            color: var(--primary);
            border: 1px solid var(--primary);
            transition: all 0.3s;
            text-transform: capitalize;
        }

        .fc-button:hover {
            background-color: var(--primary);
            color: white;
        }

        .fc-button-active {
            background-color: var(--primary);
            color: white;
        }

        .fc-daygrid-day-number {
            color: var(--dark);
        }

        .fc-day-today {
            background-color: rgba(203, 169, 121, 0.1) !important;
        }

        .fc-event {
            background-color: var(--secondary);
            border-color: var(--secondary);
            color: white;
            padding: 3px 6px;
            border-radius: 4px;
            cursor: pointer;
        }

        .fc-event:hover {
            opacity: 0.9;
        }

        .fc-daygrid-event-dot {
            border-color: white !important;
        }

        .fc-col-header-cell {
            background-color: var(--primary);
            color: white;
        }

        .fc-daygrid-day.fc-day-today .fc-daygrid-day-number {
            color: var(--primary);
            font-weight: bold;
        }

        /* Button Styles */
        .btn-reserver {
            background: #8D598F;
            color: white;
            border: none;
            padding: 12px 30px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            box-shadow: 0 10px 20px rgba(141, 89, 143, 0.3);
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
        }

        .btn-reserver:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(141, 89, 143, 0.4);
            color: white;
        }

        .btn-reserver i {
            margin-left: 8px;
        }

        /* Animations */
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }

        /* Responsive Adjustments */
        @media (max-width: 992px) {
            .hero-title {
                font-size: 3rem;
            }

            .salle-title {
                font-size: 2rem;
            }
        }

        @media (max-width: 768px) {
            .hero-parallax {
                height: 60vh;
                background-attachment: scroll;
            }

            .hero-title {
                font-size: 2.5rem;
            }

            .info-grid {
                grid-template-columns: 1fr;
            }

            .fc-toolbar {
                flex-direction: column;
                align-items: flex-start;
            }

            .fc-toolbar-title {
                margin: 10px 0;
            }
        }

        @media (max-width: 576px) {
            .hero-parallax {
                height: 50vh;
            }

            .hero-title {
                font-size: 2rem;
            }

            .salle-container {
                margin-top: -50px;
            }

            .fc-header-toolbar {
                flex-direction: column;
            }

            .fc-toolbar-chunk {
                margin-bottom: 10px;
            }
        }
    </style>
{% endblock %}

