    <script>
document.addEventListener('DOMContentLoaded', function() {
    const searchForm = document.getElementById('searchForm');
    const searchResults = document.getElementById('searchResults');
    
    if (searchForm) {
        // Gestion de la soumission du formulaire
        searchForm.addEventListener('submit', function(e) {
            e.preventDefault();
            performSearch();
        });
        
        // Recherche dynamique lors du changement des champs (optionnel)
        const searchInputs = document.querySelectorAll('.search-input');
        searchInputs.forEach(input => {
            input.addEventListener('change', function() {
                performSearch();
            });
        });
    }
    
    function performSearch() {
        const formData = new FormData(searchForm);
        const searchParams = new URLSearchParams();
        
        // Ajouter les param√®tres de recherche
        for (const [key, value] of formData.entries()) {
            if (value) {
                searchParams.append(key, value);
            }
        }
        
        // URL de la recherche
        const searchUrl = searchForm.dataset.searchUrl + '?' + searchParams.toString();
        
        // Effectuer la requ√™te AJAX
        fetch(searchUrl, {
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.text())
        .then(html => {
            searchResults.innerHTML = html;
            // Initialiser les composants JS si n√©cessaire (carousel, etc.)
            initComponents();
        })
        .catch(error => {
            console.error('Error:', error);
        });
    }
    
    function initComponents() {
        // R√©initialiser les composants JS si n√©cessaire
    }
});
</script>

