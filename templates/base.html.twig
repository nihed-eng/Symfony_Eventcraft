        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
        
        {% block body %}
        <div id="content-wrapper">
            <!-- Hero Section -->
            <section class="hero-section">
                <div class="hero-overlay"></div>
                <div class="container hero-content">
                    <div class="row">
                        <div class="col-12 text-center">
                            <p class="breadcrumbs mb-0">
                                <span class="mr-3">
                                    <a href="/">Accueil <i class="ion-ios-arrow-forward"></i></a>
                                </span> 
                                <span>Salles</span>
                            </p>
                            <h1 class="display-4 mb-3">Liste des Salles</h1>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Liste des salles -->
            <main class="salles-container">
                <div class="container">
                    <div class="row">
                        {% for salle in salles %}
                            <div class="col-md-4 mb-4">
                                <div class="card h-100">
                                    <img src="{{ asset('images/' ~ salle.imageSalle|split('\\')|last) }}" 
                                         class="card-img-top" 
                                         alt="{{ salle.nomSalle }}">
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title">{{ salle.nomSalle }}</h5>
                                        <p class="card-text">Capacité: {{ salle.capacite }}</p>
                                        <p class="card-text">Équipement: {{ salle.equipement }}</p>
                                        <p class="card-text">Localisation: {{ salle.getLocationSalle() }}</p>
                                        <p class="card-text">Prix: {{ salle.prix }} EUR</p>
                                        <div class="d-flex justify-content-between mt-auto">
                                            <button onclick="openEditModal({{ salle.idSalle }})" 
                                                    class="btn btn-warning">
                                                Modifier
                                            </button>
                                            <form action="{{ path('app_salle_delete', {'idSalle': salle.idSalle}) }}" 
                                                  method="post" 
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette salle ?')">
                                                <button type="submit" class="btn btn-danger">Supprimer</button>
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ salle.idSalle) }}">
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="col-12">
                                <p class="text-center">Aucune salle trouvée.</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </main>
        </div>
        {% endblock %}
        
        {# Bootstrap JS #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        
        {# GSAP for animations #}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.0/gsap.min.js"></script>

        <script>
            // Changement de la navbar au scroll
            window.addEventListener('scroll', function() {
                if (window.scrollY > 50) {
                    document.querySelector('.navbar').classList.add('scrolled');
                } else {
                    document.querySelector('.navbar').classList.remove('scrolled');
                }
            });

            function openEditModal(idSalle) {
                fetch(`/salle/edit/${idSalle}`)
                    .then(response => response.text())
                    .then(html => {
                        document.getElementById('editFormContainer').innerHTML = html;
                        const editModal = new bootstrap.Modal(document.getElementById('editModal'));
                        editModal.show();
                    });
            }
        </script>
