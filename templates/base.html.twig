        }

        /* Items de navigation */
      /* Items de navigation */
    .nav-item {
        margin: 0 0.5rem;
        position: relative; /* Ajoutez cette ligne */
    }

    .nav-link {
        color: white !important;
        font-weight: 500;
        text-transform: uppercase;
        font-size: 0.8rem !important;
        padding: 0.75rem 10px !important;
        transition: var(--transition);
        position: relative;
    }

    /* Ajoutez ce bloc pour définir le ::after initial */
    .nav-link::after {
        content: '';
        position: absolute;
        bottom: 5px;
        left: 10px;
        right: 10px;
        height: 2px;
        background: #CBA979;
        transform: scaleX(0);
        transform-origin: center;
        transition: var(--transition);
        opacity: 0;
    }

    .nav-link:hover {
        color: #CBA979 !important;
    }

    .nav-link:hover::after {
        transform: scaleX(1);
        opacity: 1;
    }

    /* Animation plus prononcée pour le lien actif */
    .nav-link.active::after {
        transform: scaleX(1);
        opacity: 1;
        background: white;
    }


        /* Menu mobile */
        .navbar-toggler {
            border: none;
            order: 4;
        }

        .navbar-toggler:focus {
            box-shadow: none;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 1%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        /* Dropdown */
        .dropdown-menu {
            border: none;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        /* Responsive */
        @media (max-width: 992px) {
            .navbar-container {
                justify-content: space-between;
            }
            
            .left-menu {
                order: 2;
                width: 100%;
                flex: none;
                margin-top: 1rem;
            }
            
            .navbar-brand {
                order: 1;
                margin: 0;
            }
            
            .right-menu {
                order: 3;
                width: auto;
                flex: none;
            }
            
            .navbar-collapse {
                width: 100%;
            }
        }

            /* Hero Section */
              .hero-section {
        position: relative;
        width: 100%;
        height: 100vh;
        min-height: 400px; /* Augmenté pour les petits écrans */
        max-height: 800px; /* Limite la hauteur sur grands écrans */
        background-image: url('/images/offre.jpeg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed; /* Effet parallaxe optionnel */
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-align: center;
        padding: 120px 20px 80px; /* Ajustement du padding */
        margin-top:-122px;
        box-sizing: border-box;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4);
    }

    .hero-content {
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 1200px;
        padding: 0 20px;
    }

    .hero-section h1 {
        font-size: clamp(2rem, 5vw, 3.5rem); /* Taille responsive */
        font-weight: 700;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
        line-height: 1.2;
    }

    .breadcrumbs {
        font-size: clamp(0.9rem, 2vw, 1.1rem);
        margin-bottom: 1.5rem;
        color: rgba(255, 255, 255, 0.9);
    }

    .breadcrumbs a {
        color: white;
        text-decoration: none;
        transition: opacity 0.3s;
    }

    .breadcrumbs a:hover {
        opacity: 0.8;
    }

    /* Media Queries pour différents breakpoints */
    @media (max-width: 992px) {
        .hero-section {
            height: 80vh;
            min-height: 350px;
                    margin-top: -220px !important;
            padding-top: 100px;
            background-attachment: scroll; /* Désactive le parallaxe sur mobile */
        }
    }

    @media (max-width: 768px) {
        .hero-section {
            height: 70vh;
            min-height: 300px;
         margin-top: -175px;
        }

        .hero-content {
            padding: 0 15px;
        }
    }

    @media (max-width: 576px) {
        .hero-section {
            height: 60vh;
            min-height: 250px;
            padding: 80px 15px 60px;
        }

        .hero-section h1 {
            margin-bottom: 0.5rem;
        }

        .breadcrumbs {
            margin-bottom: 1rem;
        }
    }

    @media (max-width: 400px) {
        .hero-section {
            height: 50vh;
            min-height: 200px;
        }
    }
