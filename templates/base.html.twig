          /* Navbar Styles */
        .navbar {
            z-index: 1000;
            background-color: transparent;
            padding: 0.5rem 1rem;
        }

        .navbar-container {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            width: 100%;
        }

        /* Menu de gauche */
        .left-menu {
            display: flex;
            flex: 1;
            order: 1;
        }

        /* Logo à droite */
        .navbar-brand {
            order: 2;
            margin: 0 20px;
        }

        .logo-img {
            height: 90px;
            transition: var(--transition);
        }

        /* Menu utilisateur à droite */
