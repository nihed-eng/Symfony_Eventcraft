            <a class="navbar-brand" href="{{ path('app_home') }}">
                <i class="fas fa-calendar-alt me-2"></i>EventCraft
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    {% if app.user %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_events') }}">Evennements</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_reclamation_new') }}">Submit Complaint</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_offre_index') }}">Offre</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_profilsalle') }}">Salle</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('decoration_welcom') }}">Décorations</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>

        <!-- 2ème 1/2 : Logo centré -->
        <div class="navbar-logo">
            <a href="{{ path('app_home') }}">
                <img src="/images/logoblanc.png" alt="Logo" class="center-logo">
            </a>
        </div>

        <!-- 3ème 1/3 : Liens utilisateur -->
        <div class="navbar-user">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                {% if app.user %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-circle me-1"></i>{{ app.user.firstName|default(app.user.email|split('@')[0]) }}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="{{ path('decoration_index') }}"><i class="fas fa-user me-2"></i>Profile</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_settings') }}"><i class="fas fa-cog me-2"></i>Settings</a></li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><a class="dropdown-item" href="{{ path('app_admin_dashboard') }}"><i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard</a></li>
                            {% endif %}
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                        </ul>
                    </li>
                {% else %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}"><i class="fas fa-sign-in-alt me-1"></i>Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_register') }}"><i class="fas fa-user-plus me-1"></i>Register</a></li>
                {% endif %}
