{% extends 'base.html.twig' %}

{% block title %}Ajouter une commande de décoration{% endblock %}

{% block body %}
<div class="container my-5">
    <h1>Ajouter une commande de décoration</h1>

{{ form_start(form, { 'attr': { 'novalidate': 'novalidate' } }) }}

        <!-- Champ Quantité -->
        <div class="mb-3">
            {{ form_label(form.quantite) }}
            {{ form_widget(form.quantite, {
                'attr': {
                    'class': 'form-control' ~ (form.quantite.vars.errors|length ? ' is-invalid' : '')
                }
            }) }}
            <div class="invalid-feedback d-block">
                {{ form_errors(form.quantite) }}
            </div>
        </div>

        <!-- Champ Date -->
        <div class="mb-3">
            {{ form_label(form.dateCommande) }}
            {{ form_widget(form.dateCommande, {
                'attr': {
                    'class': 'form-control' ~ (form.dateCommande.vars.errors|length ? ' is-invalid' : '')
                }
            }) }}
            <div class="invalid-feedback d-block">
                {{ form_errors(form.dateCommande) }}
            </div>
        </div>

        <!-- Boutons -->
        <button type="submit" class="btn btn-primary">Ajouter</button>
        <a href="{{ path('commandedecoration_index') }}" class="btn btn-secondary">Annuler</a>

    {{ form_end(form) }}
</div>
{% endblock %}
