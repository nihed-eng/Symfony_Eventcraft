{% extends 'basetemp.html.twig' %}

{% block title %}Forum: {{ forum.titreForum }}{% endblock %}

{% block stylesheets %}
<style>
    .forum-details {
        background: #fff;
        border-left: 6px solid #CBA979;
        border-radius: 12px;
        padding: 40px;
        margin-top: 60px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }

    .forum-details h2 {
        color: #8D598F;
        font-weight: bold;
        margin-bottom: 30px;
    }

    .forum-info {
        font-size: 1.1rem;
        margin-bottom: 20px;
    }

    .forum-info strong {
        color: #B19BB2;
        display: inline-block;
        width: 150px;
    }

    .action-buttons {
        margin-top: 30px;
    }

    .btn-custom {
        display: inline-block;
        background: #F0C8C6;
        color: #000;
        padding: 10px 25px;
        border-radius: 30px;
        margin-right: 10px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease-in-out;
    }

    .btn-custom:hover {
        background: #B19BB2;
        color: #fff;
    }

    .btn-delete {
        background: #8D598F;
        color: #fff;
        padding: 10px 25px;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 500;
        border: none;
        transition: background 0.3s ease;
    }

    .btn-delete:hover {
        background: #CBA979;
    }
</style>
{% endblock %}

{% block body %}
<!-- Hero Section Begin -->
<section class="hero">
    <div class="overlay"></div>
    
    <div class="hero__slider owl-carousel">
        <div class="hero__item" style="background-image: url('/images/slider3.jpg');"></div>
        <div class="hero__item" style="background-image: url('/images/slider2.jpeg');"></div>
        <div class="hero__item" style="background-image: url('/images/slider1.jpg');"></div>
    </div>
    
    <div class="container">
        <div class="hero__text">
            <h5>WELCOME HIROTO</h5>
            <h2>Experience the greatest for your holidays.</h2>
        </div>
    </div>
</section>
<!-- Hero Section End -->



<!-- Include the necessary scripts for Owl Carousel -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
<div class="hero-wrap">
    <div class="overlay"></div>
    <div class="container">
        <p class="breadcrumbs mb-2">
            <a href="/">Accueil <i class="ion-ios-arrow-forward"></i></a>
            <span>Forums</span>
        </p>
        <h1>Liste des Forums</h1>
    </div>
</div>
<script>
    $(document).ready(function() {
        $(".hero__slider").owlCarousel({
            loop: true,
            margin: 0,
            nav: false,
            dots: true,
            items: 1,
            autoplay: true,
            autoplayTimeout: 5000,
            autoplayHoverPause: true,
            smartSpeed: 1000,
            animateOut: 'fadeOut'
        });
    });
</script>
<div class="container">
    <div class="forum-details">
        <h2>üìÑ D√©tails du Forum</h2>

        <div class="forum-info">
            <strong>üÜî ID :</strong> {{ forum.id }}
        </div>
        <div class="forum-info">
            <strong>üìå Titre :</strong> {{ forum.titreForum }}
        </div>
        <div class="forum-info">
            <strong>üìù Description :</strong> {{ forum.descriptionForum }}
        </div>
        <div class="forum-info">
            <strong>üìÖ Date de cr√©ation :</strong> {{ forum.dateCreation ? forum.dateCreation|date('d/m/Y') : '' }}
        </div>

        <div class="action-buttons">
            <a href="{{ path('app_forum_index') }}" class="btn-custom">‚¨Ö Retour</a>
            <a href="{{ path('app_forum_edit', {'id': forum.id}) }}" class="btn-custom">‚úè Modifier</a>

            {{ include('forum/_delete_form.html.twig', { 'button_label': 'üóë Supprimer', 'button_class': 'btn-delete' }) }}
        </div>
    </div>
</div>
{% endblock %}
