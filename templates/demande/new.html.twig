{% extends 'baseoffre.html.twig' %}

{% block title %}Créer une nouvelle demande{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: #f8f9fa;
        }
        .hero-wrap {
            background-size: cover;
            background-position: center center;
            height: 400px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
        }
        .hero-wrap .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 58%;
            background: rgba(0, 0, 0, 0.5);
        }
        .form-container {
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            width: 100%;
            margin-top: 30px;
        }
        .btn-custom {
            padding: 5px 10px;
            border-radius: 0px;
            text-decoration: none;
            color: white;
            display: inline-flex;
            align-items: center;
            border: none;
            margin: 4px;
            justify-content: center;
            background-color: #CBA979;
        }
        .btn-custom:hover {
            background-color: #F0C8C6 !important;
        }
        .form-label {
            font-weight: bold;
            color: #333;
        }
        .form-control {
            border-radius: 8px;
        }
        .is-invalid {
            border-color: #dc3545;
        }
        .text-danger {
            color: #dc3545;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="hero-wrap" style="background-image: url('/images/ajoutdemande.jpg');">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-end justify-content-start">
                <div class="col-md-12 text-center mb-5">
                    <p class="breadcrumbs mb-0"><span class="mr-3"><a href="/">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Demandes</span></p>
                    <h1 class="mb-3 bread">Faire une demande pour l'offre : {{ offre.titreOffre }}</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="form-container">
            <h2 class="text-center mb-4">Créer une Nouvelle Demande</h2>
            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom'}}) }}
                <div id="error-nom" class="text-danger small"></div>
            </div>

            <div class="mb-3">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Décrivez votre demande...'}}) }}
                <div id="error-description" class="text-danger small"></div>
            </div>

            <button type="submit" class="btn btn-custom w-100" id="submit-btn">Envoyer</button>

            {{ form_end(form) }}

            <div class="text-center mt-3">
                <a href="{{ path('app_offre_index') }}" class="text-muted">⬅ Retour à la liste des offres</a>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const form = document.querySelector('form');
            const submitBtn = document.getElementById('submit-btn');
            const nomInput = document.querySelector('[name="demande[nom]"]');
            const descriptionInput = document.querySelector('[name="demande[description]"]');
            const errorNom = document.querySelector('#error-nom');
            const errorDescription = document.querySelector('#error-description');

            form.addEventListener('submit', function(event) {
                let valid = true;

                // Validation Nom
                if (nomInput.value.trim() === '') {
                    valid = false;
                    nomInput.classList.add('is-invalid');
                    errorNom.textContent = 'Le nom est requis.';
                } else if (nomInput.value.trim().length < 3) {
                    valid = false;
                    nomInput.classList.add('is-invalid');
                    errorNom.textContent = 'Le nom doit comporter au moins 3 caractères.';
                } else {
                    nomInput.classList.remove('is-invalid');
                    errorNom.textContent = '';
                }

                // Validation Description
                if (descriptionInput.value.trim() === '') {
                    valid = false;
                    descriptionInput.classList.add('is-invalid');
                    errorDescription.textContent = 'La description est requise.';
                } else if (descriptionInput.value.trim().length < 10) {
                    valid = false;
                    descriptionInput.classList.add('is-invalid');
                    errorDescription.textContent = 'La description doit comporter au moins 10 caractères.';
                } else {
                    descriptionInput.classList.remove('is-invalid');
                    errorDescription.textContent = '';
                }

                // Si la validation échoue, empêcher l'envoi du formulaire
                if (!valid) {
                    event.preventDefault();
                }
            });
        });
    </script>

{% endblock %}
