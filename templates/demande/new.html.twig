                } else if (nomInput.value.trim().length < 3) {
                    valid = false;
                    nomInput.classList.add('is-invalid');
                    errorNom.textContent = 'Le nom doit comporter au moins 3 caractères.';
                } else {
                    nomInput.classList.remove('is-invalid');
                    errorNom.textContent = '';
