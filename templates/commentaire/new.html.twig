{% extends 'basetemp.html.twig' %}

{% block title %}Nouveau Commentaire{% endblock %}

{% block body %}
    <!-- Hero Section Begin -->
    <section class="hero">
        <div class="overlay"></div>
        
        <div class="hero__slider owl-carousel">
            <div class="hero__item" style="background-image: url('/images/slider3.jpg');"></div>
            <div class="hero__item" style="background-image: url('/images/slider2.jpeg');"></div>
            <div class="hero__item" style="background-image: url('/images/slider1.jpg');"></div>
        </div>
        
        <div class="container">
            <div class="hero__text">
                <h5>COMMENTAIRES FORUM</h5>
                <h2>Partagez votre opinion</h2>
            </div>
        </div>
    </section>
    <!-- Hero Section End -->

    <!-- Breadcrumb Section -->
    <div class="hero-wrap">
        <div class="overlay"></div>
        <div class="container">
            <p class="breadcrumbs mb-2">
                <a href="{{ path('app_home') }}">Accueil <i class="fas fa-chevron-right"></i></a>
                <a href="{{ path('app_forum_index') }}">Forums <i class="fas fa-chevron-right"></i></a>
                <a href="{{ path('app_commentaire_index') }}">Commentaires <i class="fas fa-chevron-right"></i></a>
                <span>Nouveau</span>
            </p>
            <h1>Ajouter un commentaire</h1>
        </div>
    </div>

    <!-- Form Section -->
    <section class="form-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <div class="form-container">
                        {{ form_start(form, {'attr': {'class': 'comment-form'}}) }}
                            <div class="form-group">
                                {{ form_label(form.forum, 'Forum concerné') }}
                                {{ form_widget(form.forum, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.forum) }}
                            </div>
                            
                            <div class="form-group">
                                {{ form_label(form.contenu, 'Votre commentaire') }}
                                {{ form_widget(form.contenu, {'attr': {'class': 'form-control', 'rows': 6}}) }}
                                {{ form_errors(form.contenu) }}
                            </div>
                            
                            <div class="form-actions">
                                <button type="submit" class="primary-btn">PUBLIER LE COMMENTAIRE</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                    
                    <div class="back-link mt-4">
                        <a href="{{ path('app_commentaire_index') }}" class="btn-back">
                            <i class="fas fa-arrow-left me-2"></i> RETOUR À LA LISTE
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Include the necessary scripts for Owl Carousel -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">

    <style>
        /* Hero Section Styling */
        .hero {
            position: relative;
            height: 500px;
            margin-top: 0; /* Ajuster selon votre navbar */
        }
        
        .hero .overlay {
            position: absolute;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            top: 0;
            left: 0;
            z-index: 1;
        }
        
        .hero__slider {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
        
        .hero__item {
            height: 500px;
            background-size: cover;
            background-position: center;
        }
        
        .hero__text {
            position: relative;
            z-index: 2;
            text-align: center;
            color: white;
            padding-top: 200px;
        }
        
        .hero__text h5 {
            font-size: 1.2rem;
            letter-spacing: 2px;
            color: #dfa974;
            margin-bottom: 15px;
        }
        
        .hero__text h2 {
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 30px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        /* Breadcrumbs Styling */
        .hero-wrap {
            background: linear-gradient(135deg, #8D598F 0%, #B19BB2 100%);
            padding: 30px 0;
            position: relative;
            color: white;
            text-align: center;
        }
        
        .hero-wrap .overlay {
            position: absolute;
            width: 100%;
            height: 100%;
            background: rgba(141, 89, 143, 0.6);
            top: 0;
            left: 0;
        }
        
        .hero-wrap .container {
            position: relative;
            z-index: 2;
        }
        
        .breadcrumbs a,
        .breadcrumbs span {
            color: white;
            font-size: 0.95rem;
        }
        
        .breadcrumbs i {
            margin: 0 8px;
        }
        
        .hero-wrap h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-top: 10px;
        }

        /* Form Section Styling */
        .form-section {
            padding: 80px 0;
            background-color: #f9f9f9;
        }
        
        .form-container {
            background: #ffffff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.07);
        }
        
        .comment-form .form-group {
            margin-bottom: 30px;
        }
        
        .comment-form label {
            display: block;
            font-weight: 600;
            margin-bottom: 10px;
            color: #19191a;
        }
        
        .comment-form .form-control {
            width: 100%;
            padding: 15px 20px;
            font-size: 16px;
            border: 1px solid #e1e1e1;
            border-radius: 5px;
            transition: all 0.3s;
        }
        
        .comment-form .form-control:focus {
            border-color: #dfa974;
            box-shadow: 0 0 0 0.2rem rgba(223, 169, 116, 0.25);
        }
        
        .form-actions {
            text-align: center;
            margin-top: 20px;
        }
        
        .primary-btn {
            display: inline-block;
            font-size: 14px;
            font-weight: 700;
            padding: 14px 30px;
            color: #ffffff;
            background: #dfa974;
            text-transform: uppercase;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .primary-btn:hover {
            background: #b88c5c;
        }
        
        .btn-back {
            display: inline-block;
            font-size: 14px;
            font-weight: 700;
            padding: 12px 25px;
            color: #ffffff;
            background: #3d85c6;
            text-transform: uppercase;
            text-decoration: none;
            border-radius: 5px;
            transition: all 0.3s;
        }
        
        .btn-back:hover {
            background: #2c6eb2;
            color: #ffffff;
            text-decoration: none;
        }
        
        .back-link {
            text-align: center;
        }
    </style>

    <script>
        $(document).ready(function() {
            $(".hero__slider").owlCarousel({
                loop: true,
                margin: 0,
                nav: false,
                dots: true,
                items: 1,
                autoplay: true,
                autoplayTimeout: 5000,
                autoplayHoverPause: true,
                smartSpeed: 1000,
                animateOut: 'fadeOut'
            });
        });
    </script>
{% endblock %}