{% extends 'base.html.twig' %}

{% block title %}Détails Réservation #{{ reservation.idReservation }}{% endblock %}

{% block body %}
<div class="container py-4">
    <h1 class="mb-4">Réservation #{{ reservation.idReservation }}</h1>
    
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h3>Informations</h3>
                    <p><strong>Salle :</strong> {{ reservation.salle.nomSalle }}</p>
                    <p><strong>Date début :</strong> {{ reservation.dateDebut|date('d/m/Y H:i') }}</p>
                    <p><strong>Date fin :</strong> {{ reservation.dateFin|date('d/m/Y H:i') }}</p>
                </div>
                <div class="col-md-6">
                    <h3>Client</h3>
                    {% if reservation.user %}
                        <p><strong>Nom :</strong> {{ reservation.user.nom }} {{ reservation.user.prenom }}</p>
                        <p><strong>Email :</strong> {{ reservation.user.email }}</p>
                    {% else %}
                        <p class="text-muted">Aucun utilisateur associé</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a href="{{ path('app_all_reservations') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
        <a href="{{ path('app_reservation_edit', {'idReservation': reservation.idReservation}) }}" 
           class="btn btn-warning">
            <i class="fas fa-edit"></i> Modifier
        </a>
        {{ include('reservation/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}