{% extends 'baseoffre.html.twig' %}

{% block title %}Modifier Offre{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <style>
        /* üîπ General Styles */
        body {
            background: #f8f9fa;
            font-family: 'Roboto', sans-serif;
            color: #333;
        }

        .hero-wrap {
            background-size: cover;
            background-position: center center;
            height: 300px;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
            margin-bottom: 40px;
        }

        .hero-wrap .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
        }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        .hero-wrap h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .form-container {
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
            max-width: 700px;
            margin: -50px auto 50px;
            position: relative;
            z-index: 10;
        }

        .form-title {
            color: #CBA979;
            margin-bottom: 25px;
            text-align: center;
            font-weight: 700;
        }

        .form-label {
            font-weight: 500;
            color: #495057;
            margin-bottom: 8px;
        }

        .form-control {
            border-radius: 6px;
            border: 1px solid #ced4da;
            padding: 10px 15px;
            transition: all 0.3s;
        }

        .form-control:focus {
            border-color: #CBA979;
            box-shadow: 0 0 0 0.25rem rgba(203, 169, 121, 0.25);
        }

        .btn-custom {
            background-color: #CBA979;
            color: white;
            border: none;
            padding: 10px 25px;
            border-radius: 6px;
            font-weight: 500;
            transition: all 0.3s;
            width: 100%;
            margin-top: 15px;
        }

        .btn-custom:hover {
            background-color: #b8976a;
            color: white;
            transform: translateY(-2px);
        }

        .text-danger {
            font-size: 0.85rem;
            margin-top: 5px;
        }

        .back-link {
            color: #CBA979;
            text-decoration: none;
            display: inline-block;
            margin-top: 20px;
            transition: all 0.3s;
        }

        .back-link:hover {
            color: #b8976a;
            text-decoration: underline;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .hero-wrap {
                height: 250px;
            }
            
            .hero-wrap h1 {
                font-size: 2rem;
            }
            
            .form-container {
                padding: 20px;
                margin-top: -30px;
            }
        }

        @media (max-width: 576px) {
            .hero-wrap {
                height: 200px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <!-- HERO SECTION -->
    <div class="hero-wrap" style="background-image: url('/images/ajoutdemande.jpg');">
        <div class="overlay"></div>
        <div class="container hero-content">
            <h1>Modifier votre Offre</h1>
        </div>
    </div>

    <!-- FORM SECTION -->
    <div class="container">
        <div class="form-container">
            <h2 class="form-title">Modifier les d√©tails de l'offre</h2>
            
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="mb-4">
                {{ form_label(form.titreOffre, 'Titre de l\'Offre', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.titreOffre, {'attr': {
                    'class': 'form-control' ~ (form.titreOffre.vars.valid ? '' : ' is-invalid'),
                    'placeholder': 'Ex: Promotion sp√©ciale √©t√©'
                }}) }}
                <div class="text-danger">{{ form_errors(form.titreOffre) }}</div>
            </div>

            <div class="mb-4">
                {{ form_label(form.descriptionOffre, 'Description d√©taill√©e', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.descriptionOffre, {'attr': {
                    'class': 'form-control' ~ (form.descriptionOffre.vars.valid ? '' : ' is-invalid'),
                    'rows': 5,
                    'placeholder': 'D√©crivez en d√©tail votre offre...'
                }}) }}
                <div class="text-danger">{{ form_errors(form.descriptionOffre) }}</div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-4">
                    {{ form_label(form.typeOffre, 'Type d\'Offre', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.typeOffre, {'attr': {
                        'class': 'form-control' ~ (form.typeOffre.vars.valid ? '' : ' is-invalid')
                    }}) }}
                    <div class="text-danger">{{ form_errors(form.typeOffre) }}</div>
                </div>

                <div class="col-md-6 mb-4">
                    {{ form_label(form.montant, 'Montant (‚Ç¨)', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.montant, {'attr': {
                        'class': 'form-control' ~ (form.montant.vars.valid ? '' : ' is-invalid'),
                        'placeholder': 'Ex: 150'
                    }}) }}
                    <div class="text-danger">{{ form_errors(form.montant) }}</div>
                </div>
            </div>

            <div class="mb-4">
                {{ form_label(form.dateExp, 'Date d\'Expiration', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.dateExp, {'attr': {
                    'class': 'form-control' ~ (form.dateExp.vars.valid ? '' : ' is-invalid')
                }}) }}
                <div class="text-danger">{{ form_errors(form.dateExp) }}</div>
            </div>

            <button type="submit" class="btn btn-custom">
                <i class="fas fa-save me-2"></i> Enregistrer les modifications
            </button>

            {{ form_end(form) }}

            <div class="text-center mt-4">
                <a href="{{ path('app_offre_index') }}" class="back-link">
                    <i class="fas fa-arrow-left me-2"></i>Retour √† la liste des offres
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        // Ajoute la classe is-invalid aux champs invalides
        document.addEventListener('DOMContentLoaded', function() {
            const forms = document.querySelectorAll('form');
            forms.forEach(form => {
                form.addEventListener('submit', function() {
                    const inputs = form.querySelectorAll('input, select, textarea');
                    inputs.forEach(input => {
                        if (!input.checkValidity()) {
                            input.classList.add('is-invalid');
                        }
                    });
                });
            });
        });
    </script>
{% endblock %}