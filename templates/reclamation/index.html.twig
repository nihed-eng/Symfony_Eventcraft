{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/4.5.6/css/ionicons.min.css">
    <style>
     
        .btn-primary {
            --bs-btn-active-bg: #8D598F !important;
        }

        .dropdown-menu {
            --bs-dropdown-link-hover-color: var(--bs-body-color);
            --bs-dropdown-link-hover-bg: #B19BB2 !important;
            --bs-dropdown-link-active-color: #fff;
            --bs-dropdown-link-active-bg: #B19BB2 !important;
        }

        .btn-outline-warning {
            border:none;
            --bs-btn-hover-border-color: #CBA979;
            --bs-btn-disabled-border-color: #CBA979;
            --bs-btn-active-border-color: #CBA979;
            --bs-btn-hover-color: #000;
            --bs-btn-active-bg: #8D598F;
            --bs-btn-hover-bg: #8D598F;
        }

        .me-2 {
            border:none;
            border-radius:0;
            border-bottom: 1px solid #000;
            color: #000;
            background-color: transparent;
            margin-right: .5rem !important;
        }

        .me-2:hover {
            border-radius:0;
            background-color: #000;
            margin-right: .5rem !important;
        }

        .text-body {
            border-radius: 0;
            background-color: #000;
            color: white !important;
        }

        .text-body:hover {
            border:none;
            border-radius:0;
            border-bottom: 1px solid #000;
            color: #000 !important;
            background-color: transparent;
        }

        .buttons-container {
            position: absolute;
            top: 84px;
            right: -60px;
            display: flex;
            gap: 10px;
            padding: 10px;
        }

        .hero-section {
            width: 100%;
            height: 50vh;
            background-image: url(/images/offre.jpeg);
            background-size: cover;
            background-position: center;
            position: relative;
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
        }

        .hero-content {
            position: relative;
            z-index: 1;
            color: white;
            text-align: center;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding-top: 80px; /* Espace pour l'image de profil */
        }

        .profile-section {
            text-align: center;
            position: relative;
            z-index: 10;
            margin-top: -75px; /* Déplacement vers le haut */
            margin-bottom: 30px;
        }

        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            margin: 0 auto 1rem;
            border: 5px solid white;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .main-centered-container {
            max-width: 1200px;
            margin: 0 auto;
            width: 100%;
            padding: 0 15px;
        }

        #main-footer {
            background: #343a40;
            color: white;
            padding: 20px 0;
            text-align: center;
        }

        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            height: 100%;
            display: flex;
            flex-direction: column;
            margin-bottom: 1.5rem;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
            width: 100%;
        }

        .card-body {
            flex: 1;
            display: flex;
            flex-direction: column;
            padding: 1.5rem;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 0.75rem;
            text-align: center;
        }

        .card-text {
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
            text-align: center;
        }

        .btn-container {
            margin-top: auto;
            padding-top: 15px;
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        
           .reclamation-item {
    border: 1px solid #8D598F;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

        .reclamation-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .reclamation-item .status-badge {
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .reclamation-item .status-resolved {
            background-color: #28a745;
            color: white;
        }

        .reclamation-item .status-pending {
            background-color: #ffc107;
            color: white;
        }

        .response-preview {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 10px;
            margin-top: 10px;
        }

        .response-preview-header {
            display: flex;
            align-items: center;
            margin-bottom: 5px;
        }

        .response-preview-header .admin-icon {
            margin-right: 5px;
        }

        .response-preview-content {
            font-size: 0.9rem;
        }

        @media (max-width: 768px) {
            .hero-section {
                height: 30vh;
            }

            .profile-image {
                width: 120px;
                height: 120px;
            }

            .profile-section {
                margin-top: -60px;
            }

            .hero-content {
                padding-top: 60px;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-overlay"></div>
        <div class="hero-content">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 text-center">
                        <h1 class="display-4 mb-3">Liste des réclamations</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Profile Section - Superposée partiellement sur la hero -->
    <section class="profile-section">
        <div class="container text-center position-relative">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp"
                 alt="User" class="profile-image img-fluid">
            {% if app.user %}
                <h3 class="profile-name">{{ app.user.nom }} {{ app.user.prenom }}</h3>
                <p class="text-muted profile-email">{{ app.user.email }}</p>
            {% endif %}

            <!-- Boutons ajoutés -->
            <div class="buttons-container">
                <div class="dropdown d-inline-block">
                    <a class="btn btn-primary me-2 dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                        Mes Réclamations
                    </a>

                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <li><a class="dropdown-item" href="{{ path('decoration_index') }}">Événement</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_profilsalle') }}">Salle</a></li>
                        <li><a class="dropdown-item" href="{{ path('decoration_index') }}">Offre</a></li>
                        <li><a class="dropdown-item" href="{{ path('decoration_index') }}">Décorations</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_reclamation_index') }}">MES RÉCLAMATIONS</a></li>
                    </ul>
                </div>
                <button type="button" class="btn btn-outline-dark text-body" onclick="window.location.href='{{ path('app_reclamation_new') }}'">
                    Ajouter une Réclamation
                </button>
            </div>
        </div>
    </section>

    <!-- Liste des réclamations -->
    <section class="home-room spad" style="margin-top: 70px;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Bienvenue {{ app.user.prenom|default('Utilisateur') }}</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="container py-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <!-- Ajoutez ici des éléments si nécessaire -->
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show animate__animated animate__fadeIn" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <div class="reclamation-list">
                {% if reclamations is empty %}
                    <div class="text-center py-5">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <p class="text-muted mb-0">Vous n'avez pas encore soumis de réclamation.</p>
                    </div>
                {% else %}
                    {% for reclamation in reclamations %}
                        <div class="reclamation-item p-4 mb-3 bg-white">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="mb-1">{{ reclamation.titre }}</h5>
                                    <p class="text-muted mb-2">
                                        <small>
                                            <i class="far fa-clock me-1"></i>
                                            {{ reclamation.date|date('d/m/Y') }}
                                        </small>
                                    </p>
                                    <p class="mb-0">{{ reclamation.description|slice(0, 150) }}{% if reclamation.description|length > 150 %}...{% endif %}</p>

                                    {% if reclamation.statut == 'resolved' and reclamation.response %}
                                        <div class="response-preview">
                                            <div class="response-preview-header">
                                                <span class="admin-icon">
                                                    <i class="fas fa-user-shield"></i>
                                                </span>
                                                <span>Réponse de l'administrateur :</span>
                                            </div>
                                            <div class="response-preview-content">
                                                {{ reclamation.response.contenu|slice(0, 100) }}{% if reclamation.response.contenu|length > 100 %}...{% endif %}
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="ms-3">
                                    <span class="status-badge {% if reclamation.statut == 'resolved' %}status-resolved{% else %}status-pending{% endif %}">
                                        {% if reclamation.statut == 'resolved' %}
                                            Résolu
                                        {% else %}
                                            En attente
                                        {% endif %}
                                    </span>
                                </div>
                            </div>
                            <div class="mt-3">
                                <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye me-1"></i>Voir les détails
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer id="main-footer">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <p class="mb-0">&copy; {{ "now"|date("Y") }} Mon Application. Tous droits réservés.</p>
                </div>
            </div>
        </div>
    </footer>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
