{% extends 'base.html.twig' %}

{% block title %}Inscription - EventCraft{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/auth.css') }}">
{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="row g-0 h-100">
        <div class="col-lg-6 d-none d-lg-block auth-banner">
            <div class="banner-content">
                <h1 class="display-4 fw-bold text-white mb-4">Rejoignez EventCraft</h1>
                <p class="lead text-white-50">Commencez à créer des événements incroyables dès aujourd'hui.</p>
            </div>
        </div>
        <div class="col-12 col-lg-6 auth-form-container">
            <div class="auth-form-wrapper">
                <div class="text-center mb-4">
                    <h2 class="fw-bold mb-1">Créer un compte</h2>
                    <p class="text-muted">Remplissez vos informations pour commencer</p>
                </div>

                {{ form_start(registrationForm, {'attr': {'id': 'register-form', 'class': 'needs-validation', 'novalidate': true}}) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                {{ form_widget(registrationForm.prenom) }}
                                <label for="{{ registrationForm.prenom.vars.id }}">Prénom</label>
                                <div class="invalid-feedback">
                                    {{ form_errors(registrationForm.prenom) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                {{ form_widget(registrationForm.nom) }}
                                <label for="{{ registrationForm.nom.vars.id }}">Nom</label>
                                <div class="invalid-feedback">
                                    {{ form_errors(registrationForm.nom) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.email) }}
                        <label for="{{ registrationForm.email.vars.id }}">Adresse email</label>
                        <div class="invalid-feedback">
                            {{ form_errors(registrationForm.email) }}
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.plainPassword.first) }}
                        <label for="{{ registrationForm.plainPassword.first.vars.id }}">Mot de passe</label>
                        <div class="invalid-feedback">
                            {{ form_errors(registrationForm.plainPassword.first) }}
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.plainPassword.second) }}
                        <label for="{{ registrationForm.plainPassword.second.vars.id }}">Confirmer le mot de passe</label>
                        <div class="invalid-feedback">
                            {{ form_errors(registrationForm.plainPassword.second) }}
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        {{ form_widget(registrationForm.agreeTerms) }}
                        <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
                            J'accepte les <a href="#" class="text-decoration-none">Conditions d'utilisation</a> et la <a href="#" class="text-decoration-none">Politique de confidentialité</a>
                        </label>
                        <div class="invalid-feedback">
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button class="btn btn-primary btn-lg" type="submit">
                            <i class="fas fa-user-plus me-2"></i>Créer mon compte
                        </button>
                    </div>

                    <div class="text-center">
                        <p class="mb-0">Vous avez déjà un compte ? <a href="{{ path('app_login') }}" class="text-decoration-none">Se connecter</a></p>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/auth.js') }}"></script>
    <script>
        // Additional JavaScript for client-side validation
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('register-form');
            
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                
                form.classList.add('was-validated');
            });
        });
    </script>
{% endblock %}
