{% extends 'base.html.twig' %}

{% block title %}Vérification du code{% endblock %}

{% block body %}
<div class="d-flex min-vh-100">
    <!-- Left side with gradient background -->
    <div class="d-none d-lg-flex flex-column justify-content-center align-items-center text-white text-center p-5" style="background: linear-gradient(135deg, #8a5cf6, #d53f8c); width: 50%;">
        <h1 class="display-4 fw-bold mb-4">Sécurité<br>renforcée</h1>
        <p class="lead">Nous protégeons votre compte avec une vérification en deux étapes.</p>
    </div>
    
    <!-- Right side with form -->
    <div class="d-flex flex-column justify-content-center p-4 bg-white" style="width: 50%;">
        <div class="container">
            <div class="text-center mb-4">
                <h2>Vérification du code</h2>
                <p class="text-muted">Entrez le code de vérification envoyé à votre adresse e-mail</p>
            </div>

            {% for flash_error in app.flashes('verify_code_error') %}
                <div class="alert alert-danger d-flex align-items-center" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    {{ flash_error }}
                </div>
            {% endfor %}

            <form method="post">
                <div class="verification-code-container mb-4">
                    <div class="form-floating">
                        <input type="text" name="code" id="code" 
                               class="form-control form-control-lg text-center" 
                               placeholder="Code de vérification" 
                               required 
                               autofocus 
                               maxlength="6" 
                               pattern="[0-9]*" 
                               inputmode="numeric"
                               style="letter-spacing: 0.5em; font-size: 2rem; font-weight: 600;">
                        <label for="code">Code de vérification</label>
                    </div>
                    <div class="text-muted text-center mt-2">
                        <small><i class="fas fa-info-circle me-1"></i>Le code est composé de 6 chiffres</small>
                    </div>
                </div>
                
                <div class="d-grid gap-2 mb-4">
                    <button type="submit" class="btn btn-primary btn-lg" style="background: linear-gradient(to right, #8a5cf6, #d53f8c); border: none;">
                        <i class="fas fa-check-circle me-2"></i>Vérifier le code
                    </button>
                </div>
            </form>
            
            <div class="text-center">
                <p class="text-muted mb-2">Vous n'avez pas reçu de code ?</p>
                <a href="{{ path('app_forgot_password') }}" class="text-decoration-none d-inline-flex align-items-center">
                    <i class="fas fa-redo me-2"></i>Renvoyer le code
                </a>
                <div class="mt-3">
                    <a href="{{ path('app_login') }}" class="text-decoration-none d-inline-flex align-items-center">
                        <i class="fas fa-arrow-left me-2"></i>Retour à la connexion
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.verification-code-container {
    max-width: 300px;
    margin: 0 auto;
}

.verification-code-container input:focus {
    box-shadow: 0 0 0 0.25rem rgba(138, 92, 246, 0.25);
    border-color: #8a5cf6;
}
</style>
{% endblock %} 