{% extends 'base.html.twig' %}

{% block title %}Debug Token Info (DEV MODE){% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-warning">
            <h3>Debug Token Information (DEV ONLY)</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-warning mb-4">
                <strong>WARNING:</strong> This page shows sensitive information and should only be accessible in the development environment.
            </div>
            
            <h4>Token from Session</h4>
            <div class="bg-light p-3 mb-4">
                {% if tokenFromSession %}
                    <pre>{{ tokenFromSession }}</pre>
                {% else %}
                    <p class="text-muted">No token found in session</p>
                {% endif %}
            </div>
            
            <h4>Token Object from Session</h4>
            <div class="bg-light p-3 mb-4">
                <p>{{ tokenObjectFromSession }}</p>
            </div>
            
            <h4>Dev Token Data</h4>
            <div class="bg-light p-3 mb-4">
                {% if devTokenData %}
                    <pre>{{ devTokenData|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
                {% else %}
                    <p class="text-muted">No dev token data found in session</p>
                {% endif %}
            </div>
            
            <h4>All Session Data</h4>
            <div class="bg-light p-3 mb-4">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Key</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for key, value in sessionData %}
                            <tr>
                                <td><code>{{ key }}</code></td>
                                <td>{{ value }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <div class="mt-4">
                <a href="{{ path('app_forgot_password_request') }}" class="btn btn-primary">Return to Password Reset</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}