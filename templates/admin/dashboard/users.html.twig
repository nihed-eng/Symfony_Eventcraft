{% extends 'admin/layout.html.twig' %}

{% block title %}Gestion des Utilisateurs - Admin EventCraft{% endblock %}

{% block content %}
<div class="admin-header">
    <h1 class="admin-title">Gestion des Utilisateurs</h1>
</div>

{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}

<div class="data-card">
    <div class="data-card-header">
        <h2 class="data-card-title">Liste des Utilisateurs</h2>
    </div>
    <div class="data-card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Rôle</th>
                        <th>Statut</th>
                        <th>Date d'inscription</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.firstName }} {{ user.lastName }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% if 'ROLE_ADMIN' in user.roles %}
                                    <span class="badge bg-primary">Admin</span>
                                {% else %}
                                    <span class="badge bg-secondary">User</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if user.statutCompte == 'banned' %}
                                    <span class="badge bg-danger">Banni</span>
                                {% else %}
                                    <span class="badge bg-success">Actif</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if user.createdAt %}
                                    {{ user.createdAt|date('d/m/Y H:i') }}
                                {% else %}
                                    <span class="text-muted">Non disponible</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if app.user != user %}
                                    <div class="btn-group">
                                        <form method="post" action="{{ path('app_admin_user_toggle_ban', {'id': user.id}) }}" style="display: inline-block"
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir {% if user.statutCompte == 'banned' %}réactiver{% else %}bannir{% endif %} cet utilisateur ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('toggle-ban-user-' ~ user.id) }}">
                                            <button type="submit" class="btn {% if user.statutCompte == 'banned' %}btn-success{% else %}btn-warning{% endif %} btn-sm">
                                                <i class="fas {% if user.statutCompte == 'banned' %}fa-user-check{% else %}fa-user-slash{% endif %}"></i>
                                            </button>
                                        </form>
                                        <form method="post" action="{{ path('app_admin_user_delete', {'id': user.id}) }}" style="display: inline-block; margin-left: 5px;"
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete-user-' ~ user.id) }}">
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
