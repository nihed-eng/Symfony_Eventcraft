{% extends 'admin/layout.html.twig' %}

{% block title %}Tableau de bord - Admin EventCraft{% endblock %}

{% block content %}
<div class="admin-header">
    <h1 class="admin-title">Tableau de bord</h1>
</div>

<div class="row">
    <div class="col-md-6 col-xl-3 mb-4">
        <div class="stats-card bg-primary text-white">
            <div class="stats-card-body">
                <div class="stats-card-value">{{ users|length }}</div>
                <div class="stats-card-title">Total Utilisateurs</div>
            </div>
            <div class="stats-card-icon">
                <i class="fas fa-users"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3 mb-4">
        <div class="stats-card bg-success text-white">
            <div class="stats-card-body">
                <div class="stats-card-value">{{ users|length }}</div>
                <div class="stats-card-title">Utilisateurs inscrits</div>
            </div>
            <div class="stats-card-icon">
                <i class="fas fa-user-check"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3 mb-4">
        <div class="stats-card bg-warning text-white">
            <div class="stats-card-body">
                <div class="stats-card-value">
                    {% if reclamations is defined %}
                        {{ reclamations|filter(r => r.statut == 'pending')|length }}
                    {% else %}
                        0
                    {% endif %}
                </div>
                <div class="stats-card-title">Réclamations en attente</div>
                <div class="stats-card-subtitle">Nécessitant une réponse</div>
            </div>
            <div class="stats-card-icon">
                <i class="fas fa-exclamation-circle"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3 mb-4">
        <div class="stats-card bg-info text-white">
            <div class="stats-card-body">
                <div class="stats-card-value">
                    {% if reclamations is defined %}
                        {{ reclamations|filter(r => r.statut == 'resolved')|length }}
                    {% else %}
                        0
                    {% endif %}
                </div>
                <div class="stats-card-title">Réclamations résolues</div>
            </div>
            <div class="stats-card-icon">
                <i class="fas fa-check-circle"></i>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="data-card">
            <div class="data-card-header">
                <h2 class="data-card-title">Utilisateurs récents</h2>
                <a href="{{ path('app_admin_users') }}" class="btn btn-outline-primary btn-sm">
                    Voir tout
                </a>
            </div>
            <div class="data-card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Email</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users|slice(0, 5) %}
                                <tr>
                                    <td>{{ user.prenom }} {{ user.nom }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>
                                        {% if user.statutCompte == 'active' %}
                                            <span class="badge bg-success">Actif</span>
                                        {% else %}
                                            <span class="badge bg-danger">Banni</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if user.role != 'ROLE_ADMIN' %}
                                            {% if user.statutCompte == 'active' %}
                                                <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#banUserModal{{ user.id }}">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            {% else %}
                                                <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#unbanUserModal{{ user.id }}">
                                                    <i class="fas fa-undo"></i>
                                                </button>
                                            {% endif %}
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="data-card">
            <div class="data-card-header">
                <h2 class="data-card-title">Réclamations récentes</h2>
                <a href="{{ path('app_admin_reclamations') }}" class="btn btn-outline-primary btn-sm">
                    Voir tout
                </a>
            </div>
            <div class="data-card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Utilisateur</th>
                                <th>Titre</th>
                                <th>Date</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if reclamations is defined and reclamations|length > 0 %}
                                {% for reclamation in reclamations|slice(0, 5) %}
                                    <tr>
                                        <td>{{ reclamation.user.prenom }} {{ reclamation.user.nom }}</td>
                                        <td>{{ reclamation.titre }}</td>
                                        <td>{{ reclamation.date|date('d/m/Y H:i') }}</td>
                                        <td>
                                            {% if reclamation.statut == 'pending' %}
                                                <span class="badge bg-warning">En attente</span>
                                            {% else %}
                                                <span class="badge bg-success">Résolu</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if reclamation.statut == 'pending' %}
                                                <button type="button" class="btn btn-primary btn-sm btn-respond" data-bs-toggle="modal" data-bs-target="#respondModal{{ reclamation.id }}">
                                                    <i class="fas fa-reply"></i> Répondre
                                                </button>

                                                <div class="modal fade" id="respondModal{{ reclamation.id }}" tabindex="-1" aria-labelledby="respondModalLabel{{ reclamation.id }}" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="respondModalLabel{{ reclamation.id }}">Répondre à la réclamation</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <form action="{{ path('app_admin_reclamation_respond', {'id': reclamation.id}) }}" method="post">
                                                                <div class="modal-body">
                                                                    <div class="mb-3">
                                                                        <label for="response{{ reclamation.id }}" class="form-label">Votre réponse</label>
                                                                        <textarea class="form-control" id="response{{ reclamation.id }}" name="response" rows="3" required></textarea>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                                    <button type="submit" class="btn btn-primary">Envoyer</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% else %}
                                                <button type="button" class="btn btn-success btn-sm btn-respond" data-bs-toggle="modal" data-bs-target="#viewResponseModal{{ reclamation.id }}">
                                                    <i class="fas fa-eye"></i> Voir
                                                </button>

                                                <div class="modal fade" id="viewResponseModal{{ reclamation.id }}" tabindex="-1" aria-labelledby="viewResponseModalLabel{{ reclamation.id }}" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="viewResponseModalLabel{{ reclamation.id }}">Réponse à la réclamation</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <p>{{ reclamation.response.contenu }}</p>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center py-4">
                                        <p class="text-muted mb-0">Aucune réclamation pour le moment.</p>
                                    </td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add any custom JavaScript here
        });
    </script>
{% endblock %}
