            <span>Offres</span>
        </a>
    </li>
    <li>
        <a href="{{ path('app_admin_demandes') }}" class="admin-nav-link {{ app.request.get('_route') == 'app_admin_demandes' ? 'active' }}">
            <i class="fas fa-file-signature"></i>
            <span>Demandes</span>
        </a>
    </li>
    <li>
        <a href="{{ path('app_admin_decorations') }}" class="admin-nav-link {{ app.request.get('_route') == 'app_admin_decorations' ? 'active' }}">
            <i class="fas fa-file-signature"></i>
            <span>decorations</span>
        </a>
    </li>
    <li>
        <a href="{{ path('app_admin_commandes') }}" class="admin-nav-link {{ app.request.get('_route') == 'app_admin_commandes' ? 'active' }}">
            <i class="fas fa-file-signature"></i>
            <span>commandes</span>
        </a>
    </li>
    <li>
        <a href="{{ path('admin_commentaire_index') }}" class="admin-nav-link {{ app.request.get('_route') == 'admin_commentaire_index' ? 'active' }}">
            <i class="fas fa-file-signature"></i>
            <span>commentaire</span>
        </a>
    </li>
      <li>
        <a href="{{ path('admin_forum_index') }}" class="admin-nav-link {{ app.request.get('_route') == 'admin_forum_index' ? 'active' }}">
            <i class="fas fa-file-signature"></i>
            <span>forum</span>
        </a>
    </li>
</ul>

            <h4 class="admin-nav-title mt-4">Compte</h4>
            <ul class="admin-nav-items">
                <li>
                    <a href="{{ path('app_admin_profile') }}" class="admin-nav-link {{ app.request.get('_route') == 'app_admin_profile' ? 'active' }}">
                        <i class="fas fa-user-cog"></i>
                        <span>Mon Profil</span>
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_admin_profile_password') }}" class="admin-nav-link {{ app.request.get('_route') == 'app_admin_profile_password' ? 'active' }}">
                        <i class="fas fa-shield-alt"></i>
                        <span>Sécurité</span>
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_logout') }}" class="admin-nav-link text-danger">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Déconnexion</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="admin-content">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
        
        {% block content %}{% endblock %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
  function toggleSubMenu() {
    const submenu = document.getElementById("submenu");
    submenu.style.display = submenu.style.display === "none" ? "block" : "none";
  }
</script>

{% endblock %}
