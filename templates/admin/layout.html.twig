            <span>Utilisateurs</span>
        </a>
    </li>
    <li>
        <a href="{{ path('app_admin_reclamations') }}" class="admin-nav-link {{ app.request.get('_route') == 'app_admin_reclamations' ? 'active' }}">
            <i class="fas fa-exclamation-circle"></i>
            <span>Réclamations</span>
        </a>
    </li>
    <li>
        <a href="{{ path('app_admin_salles_full') }}" class="admin-nav-link {{ app.request.get('_route') == 'app_admin_salles_full' ? 'active' }}">
