            <span class="admin-role">Administrateur</span>
        </div>

        <nav class="admin-nav">
           <h4 class="admin-nav-title">Menu Principal</h4>
<ul class="admin-nav-items">
    <li>
        <a href="{{ path('app_admin_dashboard') }}" class="admin-nav-link {{ app.request.get('_route') == 'app_admin_dashboard' ? 'active' }}">
