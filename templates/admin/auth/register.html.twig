{% extends 'base.html.twig' %}

{% block title %}Création Compte Admin - EventCraft{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
    
        .register-container {
            background: rgba(255, 255, 255, 0.98);
            padding: 3rem;
            border-radius: 20px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            position: relative;
            overflow: hidden;
            animation: fadeIn 0.6s ease-out;
        }

        .register-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #6366f1, #8b5cf6, #ec4899);
        }

        @keyframes slideUp {
            from { transform: translateY(20px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        .form-floating { margin-bottom: 1.25rem; }

        .form-control {
            border: 2px solid #e5e7eb;
            padding: 1rem;
            height: 3.5rem;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #6366f1;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }

        .btn-admin-primary {
            background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            border: none;
            padding: 1rem;
            font-weight: 600;
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .btn-admin-primary::after {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: -100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: 0.5s;
        }

        .btn-admin-primary:hover::after { left: 100%; }

        .password-requirements {
            font-size: 0.875rem;
            color: #6b7280;
            margin: 1rem 0;
            padding: 1rem;
            border-left: 4px solid #6366f1;
            background: #f3f4f6;
            border-radius: 0.5rem;
        }

        .requirements-item {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
            opacity: 0.7;
            transition: all 0.3s ease;
        }

        .requirements-item.valid {
            opacity: 1;
            color: #059669;
        }

        .requirements-item i { margin-right: 0.5rem; }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="register-container">
                <div class="text-center mb-4">
                    <i class="fas fa-user-shield fa-3x mb-3" style="background: linear-gradient(135deg, #6366f1, #8b5cf6); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
                    <h1 class="h3 mb-3 fw-bold">Créer un compte administrateur</h1>
                </div>

                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                            <i class="fas {% if label == 'success' %}fa-check-circle{% else %}fa-exclamation-circle{% endif %} me-2"></i>
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                <form method="post" id="adminRegisterForm" class="needs-validation" novalidate>
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" name="prenom" id="inputFirstName" class="form-control" required>
                                <label for="inputFirstName"><i class="fas fa-user me-2"></i>Prénom</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" name="nom" id="inputLastName" class="form-control" required>
                                <label for="inputLastName"><i class="fas fa-user me-2"></i>Nom</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="email" name="email" id="inputEmail" class="form-control" required>
                        <label for="inputEmail"><i class="fas fa-envelope me-2"></i>Email</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="password" name="password" id="inputPassword" class="form-control" required>
                        <label for="inputPassword"><i class="fas fa-lock me-2"></i>Mot de passe</label>
                    </div>

                    <div id="passwordRequirements" class="password-requirements">
                        <div class="requirements-item" data-requirement="length">
                            <i class="fas fa-circle"></i>
                            <span>Au moins 8 caractères</span>
                        </div>
                        <div class="requirements-item" data-requirement="uppercase">
                            <i class="fas fa-circle"></i>
                            <span>Une lettre majuscule</span>
                        </div>
                        <div class="requirements-item" data-requirement="lowercase">
                            <i class="fas fa-circle"></i>
                            <span>Une lettre minuscule</span>
                        </div>
                        <div class="requirements-item" data-requirement="number">
                            <i class="fas fa-circle"></i>
                            <span>Un chiffre</span>
                        </div>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('admin_register') }}">

                    <button class="btn btn-admin-primary w-100 mb-3" type="submit" id="submitBtn" >
                        <i class="fas fa-user-plus me-2"></i>Créer le compte
                    </button>

                    <div class="text-center">
                        <a href="{{ path('app_admin_login') }}" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-2"></i>Retour à la connexion
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('adminRegisterForm');
            const password = document.getElementById('inputPassword');
            const submitBtn = document.getElementById('submitBtn');

            const requirements = {
                length: str => str.length >= 8,
                uppercase: str => /[A-Z]/.test(str),
                lowercase: str => /[a-z]/.test(str),
                number: str => /[0-9]/.test(str)
            };

            const updateRequirements = () => {
                const value = password.value;
                let valid = true;

                Object.keys(requirements).forEach(req => {
                    const element = document.querySelector(`[data-requirement="${req}"]`);
                    if (!element) return;

                    const isValid = requirements[req](value);
                    element.classList.toggle('valid', isValid);

                    const icon = element.querySelector('i');
                    if (icon) {
                        icon.className = `fas ${isValid ? 'fa-check-circle' : 'fa-circle'}`;
                    }

                    valid = valid && isValid;
                });

                submitBtn.disabled = !valid;
            };

            if (password) {
                password.addEventListener('input', updateRequirements);
            }

            form.addEventListener('submit', function (e) {
                if (!form.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                form.classList.add('was-validated');
            });

            // Animation des champs
            document.querySelectorAll('.form-floating').forEach((element, index) => {
                element.style.animation = `slideUp 0.3s ease forwards ${index * 0.1}s`;
                element.style.opacity = '0';
            });
        });
    </script>
{% endblock %}

