{% extends 'base.html.twig' %}

{% block title %}Création Compte Admin - EventCraft{% endblock %}

{% block navbar %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(135deg, #1a1c2c 0%, #2c3e50 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            font-family: 'Inter', sans-serif;
        }

        .admin-auth-container {
            width: 100%;
            padding: 15px;
        }

        .register-container {
            background: rgba(255, 255, 255, 0.98);
            padding: 3rem;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.25);
            backdrop-filter: blur(15px);
            margin-top: 0;
            position: relative;
            overflow: hidden;
        }

        .register-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #3b82f6, #8b5cf6, #ec4899);
        }

        .admin-logo {
            text-align: center;
            margin-bottom: 2.5rem;
            position: relative;
        }

        .admin-logo i {
            font-size: 4rem;
            background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 1rem;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }

        .admin-title {
            color: #1a1c2c;
            font-weight: 800;
            margin-bottom: 0.75rem;
            font-size: 2rem;
        }

        .admin-subtitle {
            color: #6b7280;
            font-size: 1rem;
            margin-bottom: 2.5rem;
            line-height: 1.5;
        }

        .form-floating {
            margin-bottom: 1.5rem;
            position: relative;
        }

        .form-control {
            border: 2px solid #e5e7eb;
            padding: 0.875rem 1rem;
            height: 3.75rem;
            font-size: 1rem;
            border-radius: 12px;
            transition: all 0.3s ease;
            background: #f9fafb;
        }

        .form-control:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.15);
            background: white;
        }

        .form-floating > label {
            padding: 1rem;
            color: #6b7280;
            font-weight: 500;
        }

        .btn-admin-primary {
            background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
            border: none;
            color: white;
            padding: 1.125rem;
            font-weight: 600;
            border-radius: 12px;
            width: 100%;
            font-size: 1.125rem;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .btn-admin-primary::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transform: translateX(-100%);
        }

        .btn-admin-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 24px rgba(59, 130, 246, 0.35);
        }

        .btn-admin-primary:hover::after {
            transform: translateX(100%);
            transition: transform 0.75s ease;
        }

        .alert {
            border: none;
            border-radius: 12px;
            padding: 1.25rem;
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            animation: slideIn 0.3s ease;
        }

        @keyframes slideIn {
            from { transform: translateY(-10px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        .alert-danger {
            background: #fee2e2;
            color: #991b1b;
        }

        .alert-success {
            background: #dcfce7;
            color: #166534;
        }

        .alert i {
            margin-right: 0.75rem;
            font-size: 1.25rem;
        }

        .admin-footer {
            text-align: center;
            margin-top: 2.5rem;
            color: #6b7280;
        }

        .admin-footer a {
            color: #3b82f6;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
            position: relative;
        }

        .admin-footer a::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 100%;
            height: 2px;
            background: linear-gradient(90deg, #3b82f6, #8b5cf6);
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        .admin-footer a:hover::after {
            transform: scaleX(1);
        }

        .form-row {
            display: flex;
            gap: 1.25rem;
            margin-bottom: 1.5rem;
        }

        .form-row .form-floating {
            flex: 1;
            margin-bottom: 0;
        }

        .password-requirements {
            font-size: 0.875rem;
            color: #6b7280;
            margin-top: -0.75rem;
            margin-bottom: 1.75rem;
            padding: 1rem;
            background: #f3f4f6;
            border-radius: 10px;
            border-left: 4px solid #3b82f6;
        }

        .password-requirements ul {
            margin: 0.75rem 0 0 0;
            padding-left: 1.5rem;
            list-style-type: none;
        }

        .password-requirements li {
            margin-bottom: 0.5rem;
            position: relative;
            padding-left: 1.5rem;
        }

        .password-requirements li::before {
            content: '⚬';
            position: absolute;
            left: 0;
            color: #3b82f6;
        }


    </style>
{% endblock %}

{% block body %}
<div class="admin-auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="register-container">
                    <div class="admin-logo">
                        <i class="fas fa-user-shield"></i>
                    </div>
                    
                    <div class="text-center">
                        <h1 class="admin-title">Créer un compte administrateur</h1>
                        <p class="admin-subtitle">Remplissez le formulaire ci-dessous pour créer votre compte administrateur sécurisé</p>
                    </div>

                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }}">
                                <i class="fas {% if label == 'success' %}fa-check-circle{% else %}fa-exclamation-circle{% endif %}"></i>
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <form method="post">
                        <div class="form-row">
                            <div class="form-floating">
                                <input type="text" name="firstName" id="inputFirstName" class="form-control" placeholder="Prénom" required autofocus>
                                <label for="inputFirstName"><i class="fas fa-user me-2"></i>Prénom</label>
                            </div>

                            <div class="form-floating">
                                <input type="text" name="lastName" id="inputLastName" class="form-control" placeholder="Nom" required>
                                <label for="inputLastName"><i class="fas fa-user me-2"></i>Nom</label>
                            </div>
                        </div>

                        <div class="form-floating">
                            <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required>
                            <label for="inputEmail"><i class="fas fa-envelope me-2"></i>Email</label>
                        </div>

                        <div class="form-floating">
                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
                            <label for="inputPassword"><i class="fas fa-lock me-2"></i>Mot de passe</label>
                        </div>

                        <div class="password-requirements">
                            <i class="fas fa-info-circle me-2"></i>Le mot de passe doit contenir :
                            <ul>
                                <li>Au moins 8 caractères</li>
                                <li>Une lettre majuscule</li>
                                <li>Une lettre minuscule</li>
                                <li>Un chiffre</li>
                            </ul>
                        </div>


                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('admin_register') }}">

                        <button class="btn btn-admin-primary" type="submit">
                            <i class="fas fa-user-plus me-2"></i>Créer le compte
                        </button>

                        <div class="admin-footer">
                            Déjà un compte ? <a href="{{ path('app_admin_login') }}">Se connecter</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{% endblock %}
