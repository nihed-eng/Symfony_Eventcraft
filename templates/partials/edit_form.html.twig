{{ form_start(form, {'attr': {'id': 'edit-salle-form', 'class': 'ajax-form'}}) }}
    {{ form_row(form.nomSalle) }}
    {{ form_row(form.capacite) }}
    {{ form_row(form.equipement) }}
    
    <div class="form-group">
        {{ form_label(form.imageFile) }}
        {{ form_widget(form.imageFile) }}
        {% if salle.imageSalle %}
            <div class="current-image mt-2">
                <small>Image actuelle:</small>
                <img src="{{ asset('uploads/images/' ~ salle.imageSalle) }}" 
                     class="img-thumbnail" 
                     style="max-width: 200px;">
            </div>
        {% endif %}
        {{ form_errors(form.imageFile) }}
    </div>
    
    {{ form_row(form.locationSalle) }}
    {{ form_row(form.qualite) }}
    {{ form_row(form.prix) }}

    <div class="form-actions mt-3">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <button type="button" class="btn btn-secondary close-modal">Annuler</button>
    </div>
{{ form_end(form) }}

<script>
// Gestion locale du bouton annuler
document.querySelectorAll('.close-modal').forEach(btn => {
    btn.addEventListener('click', () => {
        document.getElementById('editModal').style.display = 'none';
    });
});
</script>